<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white" >

            <LinearLayout
                 android:id="@+id/linearLayout_navigation_shopping"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
               android:visibility="gone"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:background="@drawable/layoutstyle"
                     >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="逛街" 
                        android:textSize="15dp"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>

                <LinearLayout
                     android:id="@+id/linearLayout_navigation_shoppingcolor"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3" 
               android:orientation="horizontal"
                    android:background="@color/green"
                    >
                </LinearLayout>

            </LinearLayout>
            
            <LinearLayout
            android:id="@+id/linearLayout_navigation_scenicspots"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                       android:background="@drawable/layoutstyle"
                     >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="景点" 
                        android:textSize="15dp"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>

                <LinearLayout
                     android:id="@+id/linearLayout_navigation_scenicspotscolor"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3" 
                    android:orientation="horizontal"
                    android:background="@color/white"
                    >
                </LinearLayout>

            </LinearLayout>
            
            <LinearLayout
                 android:id="@+id/linearLayout_navigation_specialties"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                       android:background="@drawable/layoutstyle"
                     >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特产" 
                        android:textSize="15dp"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>

                <LinearLayout
                     android:id="@+id/linearLayout_navigation_specialtiescolor"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3" 
                    android:orientation="horizontal"
                    android:background="@color/white"
                    >
                </LinearLayout>

            </LinearLayout>
            
            <LinearLayout
                 android:id="@+id/linearLayout_navigation_surrounding"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
       
                     >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周边" 
                        android:textSize="15dp"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>

                <LinearLayout
                     android:id="@+id/linearLayout_navigation_surroundingcolor"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3" 
                    android:orientation="horizontal"
                    android:background="@color/white"
                    >
                </LinearLayout>

            </LinearLayout>
            
            
            

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>