<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <fragment
                android:id="@+id/fragment1"
                android:name="com.example.paoma_zf.fragment.ReturnFragment"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp" >

            <com.example.paoma_zf.view.RoundImageView
                android:id="@+id/roundImageView_discussdetails_pic"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_kf2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="5dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_discussdetails_userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="TextView" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_1280_v" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/lightgray" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView_discussdetails_levelName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="管家" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_discussdetails_cityName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="贵阳世纪城"
                        android:textColor="@color/lightgray"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/textView_discussdetails_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="15-05-14  16:46"
                        android:textColor="@color/lightgray"
                        android:textSize="12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView_discussdetails_content"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="right" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="25dp" >

                        <ImageView
                            android:id="@+id/imageView_discussdetails_praiseBtN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
          
                            android:background="@drawable/ic_1280_dianzan"
                            />

                        <TextView
                            android:id="@+id/textView_discussdetails_praiseTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:text="2"
                            android:textColor="@color/lightgray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imageView_discussdetails_replyBTN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_1280_huifu" />

                        <TextView
                            android:id="@+id/textView_discussdetails_replyTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="回复"
                            android:textColor="@color/lightgray" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/gray" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp" >

            <LinearLayout
                android:id="@+id/LinearLayout_discussdetails_pariseBTN"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                 android:layout_marginTop="5dp"
                 >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="赞"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView_discussdetails_praiseTotal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="2"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.8dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:background="@color/gray"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout_discussdetails_replyBTN"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                   android:layout_marginTop="5dp"
                 >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="评论"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView_discussdetails_replyTotal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="3"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/gray" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_discussdetails_parise"
            android:layout_width="match_parent"
            android:layout_height="270dp" >

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <com.example.paoma_zf.view.ListViewForScrollView
                        android:id="@+id/listViewForScrollView_discussdetails_parise"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </com.example.paoma_zf.view.ListViewForScrollView>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_discussdetails_reply"
            android:layout_width="match_parent"
            android:layout_height="270dp" 
            android:visibility="gone"
             >

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <com.example.paoma_zf.view.ListViewForScrollView
                        android:id="@+id/listViewForScrollView_discussdetails_reply"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </com.example.paoma_zf.view.ListViewForScrollView>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
              android:id="@+id/LinearLayout_discussdetails_replywindow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
             >

            <AutoCompleteTextView
                android:id="@+id/AutoCompleteTextView_discussdetails_reply"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textMultiLine"
                android:text="" >

                <requestFocus />
            </AutoCompleteTextView>

            <Button
                android:id="@+id/button_discussdetails_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:text="评论" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>