<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_homesky" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <fragment
            android:id="@+id/fragment1"
            android:name="com.example.paoma_zf.fragment.ReturnFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/style_filletview"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/editText_registration_phonenum_new"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:background="@null"
                android:ems="10"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="#b2b2b2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_registration_isUsed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="可以使用"
                android:textColor="@color/red"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/style_filletview"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/editText_registartion_numverificationphone_new"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_weight="4"
                android:background="@color/white"
                android:ems="10"
                android:hint="验证码"
                android:inputType="textPersonName"
                android:textColor="#b2b2b2"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button_registration_verificationphone_new"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:background="@drawable/style_identy_button_frame"
                android:text="获取验证码"
                android:textColor="#0079ff"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/style_filletview" >

            <EditText
                android:id="@+id/editText_registartion_phonepassword_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textColor="#b2b2b2"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/style_filletview" >

            <EditText
                android:id="@+id/editText_registartion_phonepasswordagain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:ems="10"
                android:hint="重复输入密码"
                android:inputType="textPassword"
                android:textColor="#b2b2b2"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:id="@+id/layout_registration_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/style_filletview"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Spinner
                android:id="@+id/spinner_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/spinner" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/style_filletview" >

            <EditText
                android:id="@+id/editText_registartion_licensenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:ems="10"
                android:hint="许可号"
                android:textColor="#b2b2b2"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/style_button_fillet"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView_registartion_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下一步"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>