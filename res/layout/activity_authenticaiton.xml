<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_homesky" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <fragment
            android:id="@+id/fragment1"
            android:name="com.example.paoma_zf.fragment.ReturnFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/style_filletview"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/editText_authentication_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:ems="10"
                android:hint="姓名"
                android:textColor="#b2b2b2"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="*"
                android:textColor="@color/red" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/style_filletview"
            android:gravity="center_vertical" >

            <Spinner
                android:id="@+id/spinner_authentication"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="2"
                android:background="@drawable/spinner" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="*"
                android:textColor="@color/red" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/style_filletview"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/editText_authentication_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:ems="10"
                android:hint="邮箱"
                android:inputType="textEmailAddress"
                android:textColor="#b2b2b2"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/style_filletview"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/editText_authentication_idnum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:ems="10"
                android:hint="身份证号"
                android:inputType="number"
                android:maxLength="18"
                android:textColor="#b2b2b2"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="*"
                android:textColor="@color/red" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/style_filletview"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/editText_authentication_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:ems="10"
                android:hint="常用地址"
                android:inputType="textPostalAddress"
                android:textColor="#b2b2b2"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/style_button_fillet"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView_authentication_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即注册"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>