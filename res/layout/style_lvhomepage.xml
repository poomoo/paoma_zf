<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp" 
            android:background="@color/lightgray"
            >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

       <!--      <ImageView
                android:id="@+id/imageView_style_homepage"
                android:layout_width="100dp"
                android:layout_height="95dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />-->> 
            
            <com.example.paoma_zf.view.RoundImageView 
                    android:id="@+id/imageView_style_homepage"
                android:layout_width="100dp"
                android:layout_height="95dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher"
                
                />
            
            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView_style_homepagetitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="体验房名称"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/imageView_style_homepagedistancei"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="57dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_distancei" />

                    <TextView
                        android:id="@+id/textView_style_homepagedistancei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="579km"
                        android:textColor="@color/gray"
                        android:textSize="10dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView_style_homepagecontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  
                    android:layout_marginTop="8dp"
                     android:layout_marginLeft="3dp"
                     android:layout_marginRight="3dp"
                    android:text="TextView"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/gray"
                    android:textSize="10dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp" 
                        android:layout_alignParentBottom="true"
                        >

                        <TextView
                            android:id="@+id/textView_style_homepagemoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:text="1500"
                            android:textColor="@color/orange"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:text="元"
                            android:textSize="15dp" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>