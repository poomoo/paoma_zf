                android:id="@+id/roundImageView_housekeeperidc_pic"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher" 
                android:scaleType="fitXY"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView_housekeeperidc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18dp"
           
                    android:text="王小呆" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     >

                    <TextView
                        android:id="@+id/TextView_housekeeperidc_goodpoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                            android:textColor="@color/white"
                                     android:background="@drawable/styletext_housekeeper"
                        android:text="88% 好评" />

                    <TextView
                        android:id="@+id/TextView_housekeeperidc_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                                                 android:background="@drawable/styletext_housekeeper"
                        android:text="贵阳" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
             >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                android:src="@drawable/ic_1280_dianhua" />

            <TextView
                android:id="@+id/TextView_housekeeperidc_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                       android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                android:text="0851-88775899" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.6dp" 
